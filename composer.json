{
    "name": "sigmie/sigmie",
    "description": "Sigmie Elasticsearch utils",
    "keywords": [
        "elasticsearch",
        "sigmie"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "nicoorfi",
            "email": "nico@sigmie.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "guzzlehttp/guzzle": "^7.2",
        "nesbot/carbon": "^2.48",
        "adbario/php-dot-notation": "^2.2",
        "elastic/transport": "^8.5",
        "php-http/guzzle7-adapter": "^1.0",
        "sigmie/http": "^1.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.9",
        "spatie/ray": "^1.1",
        "brianium/paratest": "^6.3",
        "rachidlaasri/travel": "^1.06",
        "sigmie/german": "^1.0",
        "sigmie/greek": "^1.0",
        "sigmie/english": "^1.0",
        "sigmie/testing": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Sigmie\\Tests\\": "tests/",
            "Sigmie\\": "src/"
        },
        "files": [
            "src/Shared/helpers.php"
        ]
    },
    "autoload-dev": {},
    "replace": {},
    "minimum-stability": "dev",
    "prefer-stable": true,
    "bin": [],
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
